@model Part1Cloud2B.Models.Order

@{
    ViewBag.Title = "Order Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="text-primary">Thank you, @Model.CustomerName!</h4>
                        <p class="lead">Your order has been placed successfully.</p>
                    </div>

                    <hr />

                    <div class="order-details">
                        <p><strong>Product:</strong> @ViewBag.ProductName</p>
                        <p><strong>Quantity:</strong> @Model.Quantity</p>
                        <p><strong>Total Price:</strong> @Model.TotalPrice</p>
                        <p><strong>Confirmation Email:</strong> @Model.CustomerEmail</p>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

