@model Part1Cloud2B.Models.CustomerProfile

@{
    ViewBag.Title = Model?.RowKey == null ? "Create Customer" : "Edit Customer";
}

<h2>@ViewBag.Title</h2>

<form asp-action="@ViewBag.Title.Replace(" ", "")" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancel</a>
</form>
